<?xml version="1.0" encoding="UTF-8"?>
<profiles version="12">
  <profile kind="CodeFormatterProfile" name="JParq" version="12">
    <!-- Indentation: 2 spaces everywhere -->
    <setting id="org.eclipse.jdt.core.formatter.tabulation.char" value="space"/>
    <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="2"/>
    <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="2"/>
    <setting id="org.eclipse.jdt.core.formatter.continuation_indentation" value="2"/>
    <setting id="org.eclipse.jdt.core.formatter.continuation_indentation_for_array_initializer" value="2"/>
    <setting id="org.eclipse.jdt.core.formatter.lineSplit" value="120"/>

    <!-- Indent rules (keeps bodies and switch cases properly aligned) -->
    <setting id="org.eclipse.jdt.core.formatter.indent_statements_compare_to_block" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.indent_body_declarations_compare_to_type_header" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.indent_body_declarations_compare_to_enum_declaration_header" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.indent_switchstatements_compare_to_switch" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.indent_switchstatements_compare_to_cases" value="true"/>

    <!-- Braces on SAME line (matches Checkstyle LeftCurly=EOL) -->
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_block" value="end_of_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_block_in_case" value="end_of_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_method_declaration" value="end_of_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_type_declaration" value="end_of_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_switch" value="end_of_line"/>
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_enum_declaration" value="end_of_line"/>

    <!-- Force multi-line array initializer formatting compatible with Checkstyle -->
    <setting id="org.eclipse.jdt.core.formatter.brace_position_for_array_initializer" value="end_of_line"/>
    <setting id="org.eclipse.jdt.core.formatter.wrap_before_array_initializer_lbrace" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_opening_brace_in_array_initializer" value="insert"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_new_line_before_closing_brace_in_array_initializer" value="insert"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_new_line_after_comma_in_array_initializer" value="insert"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_after_opening_brace_in_array_initializer" value="do not insert"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_closing_brace_in_array_initializer" value="do not insert"/>

    <!-- Keep simple one-liners expanded (optional, avoids tight single-line try/catch) -->
    <setting id="org.eclipse.jdt.core.formatter.keep_simple_if_on_one_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_simple_for_body_on_one_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_simple_while_body_on_one_line" value="false"/>

    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_colon_in_case" value="do not insert"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_colon_in_labeled_statement" value="do not insert"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_space_before_colon_in_default" value="do not insert"/>
    <!-- Force braces even for single-line statements -->
    <setting id="org.eclipse.jdt.core.formatter.insert_new_line_before_else_in_if_statement" value="do not insert"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_new_line_before_catch_in_try_statement" value="do not insert"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_new_line_before_finally_in_try_statement" value="do not insert"/>
    <setting id="org.eclipse.jdt.core.formatter.insert_new_line_before_while_in_do_statement" value="do not insert"/>

    <setting id="org.eclipse.jdt.core.formatter.keep_then_statement_on_same_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_else_statement_on_same_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_simple_if_body_on_one_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_simple_for_body_on_one_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_simple_while_body_on_one_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_simple_do_body_on_one_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_simple_try_body_on_one_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_simple_catch_body_on_one_line" value="false"/>
    <setting id="org.eclipse.jdt.core.formatter.keep_simple_finally_body_on_one_line" value="false"/>

    <!-- Always use blocks/braces for control statements -->
    <setting id="org.eclipse.jdt.core.formatter.use_blocks_in_if_then_statements" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.use_blocks_in_else_statements" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.use_blocks_in_for_statements" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.use_blocks_in_while_statements" value="true"/>
    <setting id="org.eclipse.jdt.core.formatter.use_blocks_in_do_statements" value="true"/>

  </profile>
</profiles>
